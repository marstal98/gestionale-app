{
  "name": "gestionale-clean",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --runInBand --coverage",
    "test:ci": "jest --runInBand --ci --coverage --watchAll=false",
    "test:debug": "jest --runInBand --verbose",
    "build:web": "expo export -p web",
    "build:web:clear": "expo export -p web --clear",
    "lint": "echo 'Lint not configured yet'",
    "lint:fix": "echo 'Lint fix not configured yet'",
    "deploy:web": "npm run build:web && gh-pages -d dist",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build:all": "eas build --platform all",
    "build:android:apk": "eas build --platform android --profile production-apk",
    "build:preview": "eas build --platform all --profile preview",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "pre-build": "node scripts/pre-build.js",
    "release": "node scripts/release.js",
    "build:simulate": "node scripts/build-simulator.js",
    "build:test": "npm run pre-build && npm run build:simulate"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "^7.4.8",
    "@react-navigation/native": "^7.1.18",
    "@react-navigation/native-stack": "^7.3.26",
    "@react-navigation/stack": "^7.4.9",
    "expo": "54.0.12",
    "expo-constants": "^18.0.9",
    "expo-device": "^8.0.9",
    "expo-document-picker": "~14.0.7",
    "expo-file-system": "~19.0.14",
    "expo-linking": "~8.0.8",
    "expo-notifications": "^0.32.12",
    "expo-print": "~15.0.7",
    "expo-sharing": "~14.0.7",
    "expo-status-bar": "~3.0.8",
    "node-fetch": "^3.3.2",
    "react": "19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-paper": "^5.14.5",
    "react-native-paper-dropdown": "^2.3.1",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-vector-icons": "^10.3.0",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-typescript": "^7.27.1",
    "@babel/plugin-transform-flow-strip-types": "^7.27.1",
    "@babel/preset-flow": "^7.25.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.25.0",
    "@testing-library/react-native": "^12.4.0",
    "babel-preset-expo": "~54.0.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.0",
    "react-test-renderer": "19.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/backend/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "moduleNameMapper": {
      "^react-native$": "<rootDir>/__mocks__/react-native.js",
      "^react-native/(.*)": "<rootDir>/__mocks__/react-native.js",
      "^react-native-paper$": "<rootDir>/__mocks__/react-native-paper.js",
      "^.+/utils/toastService$": "<rootDir>/__mocks__/toastService.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "private": true
}
