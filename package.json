{
  "name": "gestionale-clean",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --runInBand --coverage",
    "test:ci": "jest --runInBand --ci --coverage --watchAll=false",
    "test:debug": "jest --runInBand --verbose"
  },
  "dependencies": {
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.26",
    "expo": "~54.0.9",
    "expo-document-picker": "~14.0.7",
    "expo-file-system": "~19.0.14",
    "expo-print": "~15.0.7",
    "expo-sharing": "~14.0.7",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-paper": "^5.14.5",
    "react-native-paper-dropdown": "^2.3.1",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "react-native-vector-icons": "^10.3.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-typescript": "^7.27.1",
    "@babel/plugin-transform-flow-strip-types": "^7.27.1",
    "@babel/preset-flow": "^7.25.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.25.0",
    "@testing-library/react-native": "^12.4.0",
    "babel-preset-expo": "^10.0.0",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.0",
    "react-test-renderer": "19.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testPathIgnorePatterns": ["/node_modules/", "/backend/"],
    "testMatch": ["**/__tests__/**/*.test.js"],
    "moduleNameMapper": {
      "^react-native$": "<rootDir>/__mocks__/react-native.js",
      "^react-native/(.*)": "<rootDir>/__mocks__/react-native.js",
      "^react-native-paper$": "<rootDir>/__mocks__/react-native-paper.js",
      "^.+/utils/toastService$": "<rootDir>/__mocks__/toastService.js"
    },
    "transformIgnorePatterns": ["/node_modules/"],
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "private": true
}
